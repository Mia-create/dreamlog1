.container {
  max-width: 420px;
  margin: 0 auto;
  padding: 64px 16px 16px 16px;
}
.section {
  background: #fff;
  border-radius: 16px;
  margin-bottom: 16px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.03);
}
.label {
  font-size: 15px;
  color: #333;
  font-weight: 500;
  margin-bottom: 8px;
}
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}
.tag {
  font-size: 13px;
  padding: 0 12px;
}
.preview-img {
  width: 100%;
  height: 160px;
  border-radius: 12px;
  object-fit: cover;
  background: #f3f4f6;
}
.preview-placeholder {
  width: 100%;
  height: 160px;
  border-radius: 12px;
  background: #f3f4f6;
  color: #bbb;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
}
.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.mb-4 {
  margin-bottom: 16px;
} 