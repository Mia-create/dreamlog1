.userinfo-bg {
  background: linear-gradient(180deg, #e0e7ff 0%, #f3f4f6 100%);
  padding: 0 0 24px 0;
}
.userinfo-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 0 0 20px 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.03);
  padding: 24px 20px 20px 20px;
  max-width: 420px;
  margin: 0 auto;
}
.userinfo-meta {
  margin-left: 16px;
}
.nickname-row {
  display: flex;
  align-items: center;
  margin-bottom: 4px;
}
.wechat-icon {
  width: 20px;
  height: 20px;
  margin-right: 6px;
}
.nickname {
  font-size: 20px;
  font-weight: 600;
  color: #333;
}
.desc {
  color: #888;
  font-size: 13px;
}
.dream-section {
  max-width: 420px;
  margin: 0 auto;
  padding: 0 12px;
}
.dream-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 18px 0 10px 0;
}
.dream-title {
  font-size: 17px;
  font-weight: 500;
  color: #222;
}
.filter-tags {
  display: flex;
  gap: 8px;
}
.tag {
  font-size: 13px;
  padding: 0 12px;
}
.dream-list {
  margin-top: 8px;
}
.mb-3 {
  margin-bottom: 12px;
}
.ml-2 {
  margin-left: 8px;
}
.dream-content {
  padding-left: 8px;
}
.dream-desc {
  font-size: 15px;
  color: #222;
  margin-bottom: 6px;
  font-weight: 500;
}
.dream-desc-sub {
  color: #888;
  font-size: 13px;
  margin-top: 2px;
}
.dream-meta {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 12px;
  color: #888;
}
.dream-time {
  margin-right: 8px;
}
.dream-tag {
  padding: 2px 8px;
  border-radius: 8px;
  font-size: 12px;
}
.dream-tag.public {
  background: #e6f4ff;
  color: #1890ff;
}
.dream-tag.private {
  background: #f5f5f5;
  color: #999;
} 