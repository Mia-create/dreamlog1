/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.dream-list {
  padding: 12px 12px 80px 12px;
  background: #f3f4f6;
}
.fab-btn {
  box-shadow: 0 4px 16px rgba(0,82,217,0.15);
}
.dream-content {
  padding-left: 8px;
}
.dream-desc {
  font-size: 15px;
  color: #222;
  margin-bottom: 6px;
  font-weight: 500;
}
.dream-meta {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 12px;
  color: #888;
}
.dream-time {
  margin-right: 8px;
}
.dream-user {
  margin-right: 8px;
}
.dream-tag {
  padding: 2px 8px;
  border-radius: 8px;
  font-size: 12px;
}
.dream-tag.public {
  background: #e6f4ff;
  color: #1890ff;
}
.dream-tag.private {
  background: #f5f5f5;
  color: #999;
}
